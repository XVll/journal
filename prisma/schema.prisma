generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define Enums
enum TradeAction {
  Buy
  Sell
}

enum TradeDirection {
  Long
  Short
}

enum TradeType {
  Stock
  Option
  Future
  Forex
  Crypto
}

enum TradeStatus {
  Open
  Closed
}

enum TradeResult {
  Win
  Loss
  BreakEven
}

enum ScalingAction {
  Initial
  ScaleIn
  ProfitTaking
  StopLoss
}

// Define Models
model Trade {
  id            String         @id @default(uuid())
  account       String
  startDate     DateTime
  ticker        String
  direction     TradeDirection
  type          TradeType      
  status        TradeStatus    
  volume        Int            
  buyVolume     Int            
  sellVolume    Int            
  openPosition  Int            
  averagePrice  Float          
  commission    Float          
  fees          Float          
  pnl           Float          
  endDate       DateTime?
  result        TradeResult?
  executionTime Int?
  notes         String?
  executions    Execution[]
}

model Execution {
  id            String        @id @default(uuid())
  date          DateTime
  ticker        String
  action        TradeAction
  quantity      Int
  amount        Float
  tradePosition Int
  price         Float
  avgPrice      Float
  scalingAction ScalingAction
  pnl           Float
  trade         Trade         @relation(fields: [tradeId], references: [id], onDelete: Cascade)
  tradeId       String
  fees          Float
  type          TradeType      
  commission    Float
  addLiquidity  Boolean
  executionHash String
}
